        <!--ContentPanel - placez tout contenu supplémentaire ici-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <ListBox x:Name="ContactList" Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Items}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="0,0,0,10" BorderBrush="AliceBlue">
                            <StackPanel Orientation="Horizontal" Tap="ContactList_Tap" Hold="ContactList_Hold">
                                <Image Source="{Binding Image}" Width="30" Height="60" />
                                <TextBlock Text="{Binding Nom}" Margin="20 0 0 0" FontSize="30" />
                                <TextBlock Text="{Binding Prenom}" Margin="10 0 0 0" FontSize="30" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>

    <!--ApplicationBar-->
    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsVisible="True" IsMenuEnabled="True">
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem Text="Ma carte"
                                              Click="ApplicationBarMenuItem_Click_MaCarte"/>
                <shell:ApplicationBarMenuItem Text="Paramètres" Click="ApplicationBarMenuItem_Click_Param"/>
